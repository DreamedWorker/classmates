{
  "name": "classmates",
  "version": "1.0.0",
  "description": "一款为你的课堂全周期提供便利的跨平台程序。",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "publish": "electron-builder --mac",
    "publish:win": "electron-builder --win",
    "electron:build-icons": "electron-icon-builder --input=./src/public/crafting_table_0.png --output=build --flatten"
  },
  "author": "梦之黯蓝 (BlueDream)",
  "license": "ISC",
  "devDependencies": {
    "electron": "^26.2.2",
    "electron-builder": "^24.6.4",
    "electron-icon-builder": "^2.0.1",
    "electron-reloader": "^1.2.3"
  },
  "dependencies": {
    "config": "^3.3.9",
    "mdui": "^1.0.2",
    "path": "^0.12.7"
  },
  "build": {
    "appId": "com.dream.classmate",
    "productName": "课堂助手",
    "copyright": "Copyright © 2023-present BlueDream.",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icons/icon.ico"
    },
    "mac": {
      "target": [ "dmg", "pkg" ],
      "icon": "build/icons/icon.icns"
    },
    "pkg": {
      "installLocation": "/Applications",
      "allowAnywhere": false,
      "welcome": "src/public/prepared/welcome_mac.txt",
      "license": "LICENSE"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "课堂助手",
      "installerIcon": "build/icons/icon.ico",
      "uninstallerIcon": "build/icons/icon.ico",
      "license": "LICENSE"
    }
  }
}
